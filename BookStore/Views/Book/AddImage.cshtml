@model BookStore.Models.Book       
            
@{
    ViewData["Title"] = "Adicionar Capa do Livro";
}

<h2>@ViewData["Title"]</h2>

<h4>Informações do Livro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddImage">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>     
            <input type="hidden" asp-for="BookId" />                   
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" readonly/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <div class="col-md-10">
                    <p>Selecione o arquivo para a capa do Livro:</p>
                    <input type="file" name="files" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listar Categorias</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}